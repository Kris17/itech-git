<%= render 'baners/show' %>


<div class="col-md-8">
  <% @posts.each  do |post| %>
      <div class="blog-post">
        <div class="blog-image">
          <%= image_tag post.picture.url if post.picture? %>

        </div>
        <div class="blog-details">
          <p>
            <i class="glyphicon glyphicon-calendar"></i><%= post.created_at %>,
            <i class="glyphicon glyphicon-user"></i><%= post.user.name %>
          </p>
        </div>
        <div class="blog-content">
            <h3 class="blog-head"><%= post.category.name %></h3>
          <p><%= post.content%> </p>
          <%= link_to 'Read more', post %>

        </div>
      </div>
  <%end%>
</div>

<div class="col-md-4 sidebar">
  <h3>Categories</h3>
  <%= render 'categories/categories'%>

  <div class="news-block">
    <h3>Recent news</h3>
    <% @news.each do |news| %>
        <div class="news">
          <div class="news-img">
            <%= image_tag news.picture.url if news.picture? %>

          </div>
          <div class="news-content">
            <p class="news-title"><%= news.title %></p>
            <p class="news-details"><i class="glyphicon glyphicon-calendar"></i><%= news.created_at %></p>
            <p><%= news.description%></p>
            <%= link_to 'Read more', news %>
          </div>
        </div>

    <%end%>
  </div>

  <div class="recent-posts">
    <h3>Recent posts</h3>
    <% @recent.each  do |post| %>
        <div class="news">
          <div class="news-img">
            <%= image_tag post.picture.url if post.picture? %>

          </div>
          <div class="news-content overflow-content">
            <p class="news-title"><%= post.category.name %></p>
            <p class="news-details"><i class="glyphicon glyphicon-calendar"></i><%= post.created_at %>
              <i class="glyphicon glyphicon-user"></i><%= post.user.name %></p>
            <p class="recent-post"><%= post.content%></p>
            <%= link_to 'Read more', post %>

          </div>
        </div>
    <%end%>
  </div>


</div>


