<% provide(:title, @title) %>
<div class="row page">
  <div class="col-md-4 profile">
      <%= gravatar_for @user %>
      <h3><%= @user.name %></h3>

      <p><b>Microposts:</b> <%= @user.microposts.count %></p>
      <p><%= link_to "view my profile", @user %></p>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
  </div>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>